{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "wt/faq",
	"title": "FAQ",
	"category": "webtero-blocks",
	"icon": "editor-help",
	"description": "Frequently Asked Questions with repeatable items",
	"keywords": ["faq", "questions", "accordion"],
	"textdomain": "webtero",
	"supports": {
		"anchor": true,
		"className": true
	},
	"attributes": {
		"webteroOptions": {
			"type": "string",
			"default": ""
		},
		"faq_items": {
			"type": "array",
			"default": []
		}
	},
	"example": {
		"attributes": {
			"faq_items": [
				{
					"heading": "Sample Question?",
					"text_content": "<p>Sample answer here.</p>"
				}
			]
		}
	}
}
